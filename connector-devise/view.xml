<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_devise_backend_form" model="ir.ui.view">
            <field name="name">devise.backend.form</field>
            <field name="model">devise.backend</field>
            <field name="arch" type="xml">
                <form string="devise Backend" version="7.0">
                    <header>
                    </header>
                    <sheet>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" class="oe_inline" />
                        </h1>
                        <group name="devise" string="devise Configuration">
                            <group colspan="4" col="4">
                                <field name="version" colspan="4"/>
                                <field name="location" placeholder="e.g. http://localhost:3000"
                                    colspan="2"/>
                                <field name="secret" colspan="2" help="to be found in config/secrets.yml of your Rails app"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_devise_backend_tree" model="ir.ui.view">
            <field name="name">devise.backend.tree</field>
            <field name="model">devise.backend</field>
            <field name="arch" type="xml">
                <tree string="Devise Backend" version="7.0">
                    <field name="name"/>
                    <field name="location"/>
                </tree>
            </field>
        </record>

        <record id="action_devise_backend" model="ir.actions.act_window">
            <field name="name">Devise Backends</field>
            <field name="res_model">devise.backend</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_devise_backend_tree"/>
        </record>

    </data>
</openerp>
